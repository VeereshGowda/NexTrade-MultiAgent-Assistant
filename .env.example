# =============================================================================
# NexTrade Multi-Agent Trading System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Configuration (REQUIRED)
# -----------------------------------------------------------------------------

# Azure OpenAI (Primary LLM)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Groq (Fallback LLM - Optional)
GROQ_API_KEY=your-groq-api-key-here

# -----------------------------------------------------------------------------
# External API Services (REQUIRED)
# -----------------------------------------------------------------------------

# Tavily Search API (for web search)
TAVILY_API_KEY=your-tavily-api-key-here

# Alpha Vantage (for stock symbol lookup)
ALPHAVANTAGE_API_KEY=your-alphavantage-api-key-here

# -----------------------------------------------------------------------------
# Monitoring and Tracing (OPTIONAL)
# -----------------------------------------------------------------------------

# LangSmith (for monitoring and debugging)
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=nextrade-production
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Database
DATABASE_PATH=data/trading_orders.db

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FORMAT=text  # Options: text, json

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
UI_PORT=8501

# Security
SECRET_KEY=your-secret-key-for-sessions
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Guardrails AI (Safety and Compliance)
ENABLE_GUARDRAILS=true
GUARDRAILS_STRICT_MODE=false

# Human-in-the-Loop
ENABLE_HITL=true
HITL_TIMEOUT_SECONDS=300

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# Production Settings (Optional)
# -----------------------------------------------------------------------------

# Environment
ENVIRONMENT=production  # Options: development, staging, production

# Debug
DEBUG=false
VERBOSE_LOGGING=false

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30
DATABASE_POOL_SIZE=5

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
CIRCUIT_BREAKER_THRESHOLD=5

# -----------------------------------------------------------------------------
# Development Settings (Optional)
# -----------------------------------------------------------------------------

# Enable development features
DEV_MODE=false
RELOAD=false
HOT_RELOAD=false

# Mock External Services (for testing)
MOCK_EXTERNAL_APIS=false
MOCK_LLM_RESPONSES=false

# -----------------------------------------------------------------------------
# Deployment Configuration
# -----------------------------------------------------------------------------

# Docker
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_TAG=latest

# Kubernetes
K8S_NAMESPACE=nextrade
K8S_REPLICAS=2

# Cloud Provider (if applicable)
CLOUD_PROVIDER=azure  # Options: azure, aws, gcp
CLOUD_REGION=eastus

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
# 
# Required API Keys:
# 1. Azure OpenAI: https://portal.azure.com (Primary LLM)
# 2. Tavily API: https://tavily.com (Web search - 1000 free requests/month)
# 3. Alpha Vantage: https://www.alphavantage.co (Stock data - 25 free requests/day)
#
# Optional API Keys:
# 4. LangSmith: https://smith.langchain.com (Monitoring - free tier available)
# 5. Groq: https://groq.com (Fallback LLM - free tier available)
#
# Security Best Practices:
# - Never commit this file with real credentials
# - Use strong, unique API keys
# - Rotate keys periodically
# - Use secret management services in production (Azure Key Vault, AWS Secrets Manager)
# - Restrict API key permissions to minimum required
#
