# =============================================================================
# NexTrade Multi-Agent Trading System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# =============================================================================
# Azure OpenAI Configuration (Primary LLM Provider - Recommended)
# =============================================================================
# Get your Azure OpenAI credentials from: https://portal.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# =============================================================================
# Groq Configuration (Alternative LLM Provider)
# =============================================================================
# Get your Groq API key from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# =============================================================================
# External API Services
# =============================================================================

# Tavily Search API (for web search tool)
# Get your API key from: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# Alpha Vantage API (for stock symbol lookup)
# Get your API key from: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# =============================================================================
# LangSmith Configuration (Monitoring & Tracing)
# =============================================================================
# Get your LangSmith credentials from: https://smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=nextrade-production

# =============================================================================
# Guardrails AI Configuration (Safety & Validation)
# =============================================================================
# Get your Guardrails API key from: https://hub.guardrailsai.com
GUARDRAILS_API_KEY=your_guardrails_api_key_here

# =============================================================================
# Application Configuration
# =============================================================================

# Database Configuration
DATABASE_PATH=./data/trading_orders.db

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# =============================================================================
# Development/Production Settings
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG=false

# =============================================================================
# Security Settings
# =============================================================================

# CORS Origins (comma-separated list for FastAPI)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000,http://127.0.0.1:8501

# Session secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET_KEY=your_secret_key_here_generate_with_secrets_module

# =============================================================================
# Resilience Configuration
# =============================================================================

# Retry Configuration
MAX_RETRIES=4
RETRY_BASE_DELAY=0.1
RETRY_MAX_DELAY=10.0

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60.0

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=20

# Timeout Configuration (seconds)
LLM_TIMEOUT=30.0
API_TIMEOUT=10.0
DATABASE_TIMEOUT=5.0

# =============================================================================
# Testing Configuration
# =============================================================================

# Use mock services in tests (true/false)
USE_MOCK_SERVICES=true

# Test database path
TEST_DATABASE_PATH=./data/test_trading_orders.db

# =============================================================================
# Notes
# =============================================================================
# 1. Never commit your .env file to version control
# 2. Add .env to your .gitignore file
# 3. Rotate API keys regularly for security
# 4. Use different keys for development, staging, and production
# 5. Store production secrets in a secure vault (e.g., Azure Key Vault)
# =============================================================================
